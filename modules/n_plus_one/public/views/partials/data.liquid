{% log 'data load start' %}

{% assign distance = context.params.distance | default: 100 | plus: 0 %}

{% assign q = context.params.q | split: "-" %}
{% graphql _selected =  'modules/n_plus_one/n1_companies', city: q[1], timezone: q[0], limit: 1 %}
{% assign selected = _selected.companies.results[0].properties %}

{% graphql g = 'modules/n_plus_one/search', point: selected.location, distance: distance, specialties: context.params.specialties %}

{% assign companies = g.companies %}
{% export companies, namespace: 'data' %}

{% assign points = g.companies.results | map: "properties" | map: "location" | map: "coordinates" %}

{% export distance, selected, points, namespace: 'map' %}

{% assign distances = "1,2,5,10,50,100,150,200,300,400,500,750,1000,2000,3000" | split: "," | map: "to_i" %}
{% assign locations = g.locations.aggs.raw.geo.location.buckets %}
{% assign specialties = g.specialties.aggs.raw.spec.spec.buckets %}
{% export distances, locations, specialties, namespace: 'filters' %}

{% assign with_programmers = false %}
{% export map, with_programmers, namespace: features %}

{% log 'data load end' %}
